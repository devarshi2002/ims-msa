pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')  // Jenkins credential ID
        DOCKERHUB_REPO = 'devarshi2002/ims-msa-jenkins'
        COMPOSE_PROJECT_NAME = 'ims'
    }

    tools {
        maven 'Maven3'
        jdk 'Jdk'
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/devarshi2002/ims-msa.git'
            }
        }

        stage('Build Backend JAR Files') {
            steps {
                dir('Backend') {
                    script {
                        echo "üî® Building all microservice JARs..."
                        bat '''
                        for /D %%d in (*) do (
                            if exist "%%d\\pom.xml" (
                                echo üî® Building %%d microservice...
                                pushd "%%d"
                                call mvn clean package -DskipTests
                                popd
                            )
                        )
                        '''
                    }
                }
            }
        }

        stage('Build Docker Images (Backend)') {
            steps {
                dir('Backend') {
                    script {
                        echo "üê≥ Building all backend service images using docker-compose..."
                        bat 'docker-compose build'
                    }
                }
            }
        }

        stage('Tag Docker Images') {
            steps {
                script {
                    def services = ['apigateway', 'eureka', 'product', 'supplier', 'stock', 'order']
                    for (service in services) {
                        def localImage = "${COMPOSE_PROJECT_NAME}-${service}:latest"
                        def remoteImage = "${DOCKERHUB_REPO}:${service}-latest"

                        echo "üè∑Ô∏è Tagging ${localImage} -> ${remoteImage}"
                        bat "docker tag ${localImage} ${remoteImage}"
                    }
                }
            }
        }

        stage('Push Images to DockerHub') {
            steps {
                script {
                    echo "üì§ Logging in to DockerHub..."
                    bat "echo ${DOCKERHUB_CREDENTIALS_PSW} | docker login -u ${DOCKERHUB_CREDENTIALS_USR} --password-stdin"

                    def services = ['apigateway', 'eureka', 'product', 'supplier', 'stock', 'order']
                    for (service in services) {
                        def remoteImage = "${DOCKERHUB_REPO}:${service}-latest"
                        echo "‚¨ÜÔ∏è Pushing image: ${remoteImage}"
                        bat "docker push ${remoteImage}"
                    }
                }
            }
        }

        stage('Cleanup Local Images') {
            steps {
                script {
                    echo "üßπ Cleaning up local Docker images..."
                    bat 'docker system prune -f'
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ All backend images built and pushed successfully!"
        }
        failure {
            echo "‚ùå Build failed. Please check logs in Jenkins console."
        }
    }
}
