pipeline {
    agent any

    environment {
        DOCKER_REPO = "devarshi2002/ims-msa-jenkins"
        SERVICES = "apigateway eureka product supplier stock order"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/devarshi2002/ims-msa.git'
            }
        }

        stage('Build Backend JAR Files') {
            steps {
                dir('Backend') {
                    bat '''
                    for /D %%d in (*) do (
                        if exist "%%d\\pom.xml" (
                            echo üî® Building %%d microservice...
                            pushd "%%d"
                            call mvn clean package -DskipTests
                            popd
                        )
                    )
                    '''
                }
            }
        }

        stage('Build Docker Images (Backend)') {
            steps {
                dir('Backend') {
                    bat 'docker-compose build'
                }
            }
        }

        stage('Tag Docker Images') {
            steps {
                script {
                    def services = env.SERVICES.split()
                    for (service in services) {
                        bat "docker tag ims-${service}:latest ${env.DOCKER_REPO}:${service}-latest"
                    }
                }
            }
        }

        stage('Push Docker Images to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    script {
                        // Log in securely
                        bat 'echo %DOCKER_PASS% | docker login -u %DOCKER_USER% --password-stdin'

                        // Push all services
                        def services = env.SERVICES.split()
                        for (service in services) {
                            bat "docker push ${env.DOCKER_REPO}:${service}-latest"
                        }

                        // Log out
                        bat 'docker logout'
                    }
                }
            }
        }

        stage('Cleanup Local Images') {
            steps {
                bat 'docker system prune -f'
            }
        }
    }

    post {
        success {
            echo "‚úÖ All backend images built and pushed successfully!"
        }
        failure {
            echo "‚ùå Build failed. Please check Jenkins console logs."
        }
    }
}
