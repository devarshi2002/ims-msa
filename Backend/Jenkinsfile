pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/devarshi2002/ims-msa.git'
            }
        }

        stage('Build Backend JAR Files') {
            steps {
                dir('Backend') {
                    bat '''
                    for /D %%d in (*) do (
                        if exist "%%d\\pom.xml" (
                            echo üî® Building %%d microservice...
                            pushd "%%d"
                            call mvn clean package -DskipTests
                            popd
                        )
                    )
                    '''
                }
            }
        }

        stage('Build Docker Images (Backend)') {
            steps {
                dir('Backend') {
                    bat 'docker-compose build'
                }
            }
        }

        stage('Tag Docker Images') {
            steps {
                script {
                    def services = ['apigateway', 'eureka', 'product', 'supplier', 'stock', 'order']
                    def dockerRepo = "devarshi2002/ims-msa-jenkins"

                    for (service in services) {
                        bat "docker tag ims-${service}:latest ${dockerRepo}:${service}-latest"
                    }
                }
            }
        }

        stage('Push Images to DockerHub') {
            steps {
                script {
                    // Using inline credentials for Docker login
                    withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                        bat 'echo %DOCKER_PASSWORD% | docker login -u %DOCKER_USERNAME% --password-stdin'

                        def services = ['apigateway', 'eureka', 'product', 'supplier', 'stock', 'order']
                        def dockerRepo = "devarshi2002/ims-msa-jenkins"

                        for (service in services) {
                            echo "‚¨ÜÔ∏è Pushing image for ${service}..."
                            bat "docker push ${dockerRepo}:${service}-latest"
                        }

                        bat "docker logout"
                    }
                }
            }
        }

        stage('Cleanup Local Images') {
            steps {
                bat 'docker system prune -f'
            }
        }
    }

    post {
        success {
            echo "‚úÖ All backend images built and pushed successfully!"
        }
        failure {
            echo "‚ùå Build failed. Please check Jenkins console logs."
        }
    }
}
